[Unit]
Description=Go Congress WordPress Docker Compose
Requires=docker.service
After=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/home/dev/aga-congress-2026
ExecStart=/usr/bin/docker compose -p aga-congress up -d
ExecStop=/usr/bin/docker compose down
TimeoutStartSec=0

[Install]
WantedBy=multi-user.target
